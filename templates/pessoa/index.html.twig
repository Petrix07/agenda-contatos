{% extends 'base.html.twig' %}
{% block title %} {{ titulo }} {% endblock %}
{% block body %}

    <h1 class="h1 text-center fst-italic fw-lighter">{{ titulo }}</h1>
    <p class="mt-3 fw-semibold">Abaixo está sendo apresentado todos os registros de pessoa cadastrados</p>
    <a href="{{ path('pessoa_cadastrar') }}" class="btn btn-outline-primary btn-sm mb-2">Incluir nova pessoa</a>

    <table class="table table-striped">

    <tr class="table-dark">
        <td>ID</td>
        <td>Nome</td>
        <td>CPF</td>
        <td>Ações</td>
    </tr>
    {% for pessoa in pessoas %}
        <tr>
            <td> {{ pessoa.id }} </td>
            <td> {{ pessoa.nome }} </td>
            <td> {{ pessoa.cpf }} </td>
            <td>
                <a href="{{ path('pessoa_editar', {id: pessoa.id}) }}" class="btn btn-outline-secondary btn-sm">Editar</a>
                <a href="{{ path('pessoa_excluir', {id: pessoa.id}) }}" class="btn btn-outline-danger btn-sm">Excluir</a>
            </td>
        </tr>
    {% endfor %}
    </table>

{% endblock %}
