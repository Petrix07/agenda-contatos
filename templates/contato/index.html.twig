{% extends 'base.html.twig' %}
{% block title %} {{ titulo }} {% endblock %}
{% block body %}

    <h1 class="h1 text-center fst-italic fw-lighter"> {{ titulo }} </h1>
    <p class="mt-3 fw-semibold">Abaixo está sendo apresentado todos os registros de contatos cadastrados</p>
    <a href="{{ path('contato_cadastrar') }}" class="btn btn-outline-primary btn-sm mb-2">Incluir novo contato</a>

    <table class="table table-striped">
    <tr class="table-dark">
        <td>ID</td>
        <td>Tipo</td>
        <td>Descrição</td>
        <td>Pessoa</td>
        <td>Ações</td>
    </tr>
    {% for contato in contatos %}
        <tr>
            <td> {{ contato.id }} </td>
            <td> {{ contato.tipo }} </td>
            <td> {{ contato.descricao }} </td>
            <td> {{ contato.pessoa.nome }} </td>
            <td>
                <a href="{{ path('contato_editar', {id: contato.id}) }}" class="btn btn-outline-secondary btn-sm">Editar</a>
                <a href="{{ path('contato_excluir', {id: contato.id}) }}" class="btn btn-outline-danger btn-sm">Excluir</a>
            </td>
        </tr>
    {% endfor %}
    </table>

{% endblock %}
